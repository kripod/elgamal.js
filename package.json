{
  "name": "elgamal",
  "version": "0.3.0",
  "description": "ElGamal cryptosystem for JavaScript.",
  "author": "Kristóf Poduszló <kripod@protonmail.com>",
  "license": "MIT",
  "keywords": [
    "el",
    "gamal",
    "crypto",
    "encrypt"
  ],
  "main": "./lib/index.js",
  "files": [
    "lib",
    "src"
  ],
  "directories": {
    "lib": "./lib"
  },
  "scripts": {
    "start": "babel-node ./example",
    "build": "babel ./src -d ./lib -s",
    "watch": "npm run build -- -w",
    "prepublish": "npm run build",
    "test": "babel-node ./node_modules/babel-istanbul/lib/cli cover ./tests && eslint ./src",
    "doc": "documentation build ./src/index.js -o ./docs -f html"
  },
  "dependencies": {
    "babel-runtime": "^6.6.1",
    "bluebird": "^3.3.5",
    "es6-error": "^3.0.0",
    "jsbn": "^0.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.8.0",
    "babel-eslint": "^6.0.4",
    "babel-istanbul": "^0.8.0",
    "babel-plugin-transform-async-to-generator": "^6.8.0",
    "babel-plugin-transform-class-properties": "^6.8.0",
    "babel-plugin-transform-runtime": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "documentation": "^4.0.0-beta2",
    "eslint": "^2.9.0",
    "eslint-config-airbnb-base": "^3.0.1",
    "eslint-plugin-import": "^1.7.0",
    "istanbul": "^0.4.3",
    "tape": "^4.5.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kripod/elgamal.js.git"
  },
  "bugs": {
    "url": "https://github.com/kripod/elgamal.js/issues"
  }
